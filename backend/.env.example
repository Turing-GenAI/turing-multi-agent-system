# FastAPI Application Settings
API_PORT="<API_PORT>"

# Toggle between Azure OpenAI and standard OpenAI
USE_AZURE_OPENAI=False

# Azure OpenAI Settings
AZURE_OPENAI_API_KEY="<AZURE_OPENAI_API_KEY>"
AZURE_OPENAI_API_ENDPOINT="<AZURE_OPENAI_API_ENDPOINT>"
AZURE_OPENAI_API_REGION="<AZURE_OPENAI_API_REGION>"
AZURE_OPENAI_API_MODEL_NAME="<AZURE_OPENAI_API_MODEL_NAME>"
AZURE_OPENAI_API_DEPLOYMENT_NAME="<AZURE_OPENAI_API_DEPLOYMENT_NAME>"
AZURE_OPENAI_API_MODEL_VERSION="<AZURE_OPENAI_API_MODEL_VERSION>"

# OpenAI API Settings
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Specify the model if you want something other than gpt-4o
OPENAI_MODEL_NAME="gpt-4o"

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME="<SMTP_USERNAME>"
# Replace with your Gmail App Password (NOT your regular Gmail password)
# DO NOT use your regular Gmail password here - it won't work and is not secure
# Get an App Password by:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. After enabling, go to https://myaccount.google.com/apppasswords
# 4. Select "Mail" and "Other (Custom name)"
# 5. Enter "FDA Audit System" as the name
# 6. Click Generate and copy the 16-character password
# 7. Paste that 16-character password below (remove spaces if any)
SMTP_PASSWORD="<SMTP_PASSWORD>"
SENDER_EMAIL="<SENDER_EMAIL>"